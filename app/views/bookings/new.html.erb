<%= simple_form_for [@booking] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :adults, collection: 1..5 %>
  <%= f.input :childrens, collection: 1..5 %>
  <%=f.input_field :baby_bed, as: :boolean, boolean_style: :inline, label: t(".baby_bed")  %>
  <%= f.input :street %>
  <%= f.input :city %>
  <%= f.input :zipcode %>
  <%= f.input :country %>
  <%= f.input :comment %>
  <%= f.input :arrival_date, as: :string, input_html: {class: "datepicker"}, id:"arrival-date" %>
  <%= f.input :departure_date, as: :string, input_html: {class: "datepicker"} %>

  <%= f.submit class: "btn btn-red-own-activities" %>
<% end %>
