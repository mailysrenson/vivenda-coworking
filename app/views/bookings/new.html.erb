<%= javascript_pack_tag 'people_limit' %>
<%= javascript_pack_tag 'disable_date' %>


<div class="container">
<%= simple_form_for [@booking] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :adults, input_html: {id: "booking_adults"}, selected: 0, collection: 0..amountParents %>
  <%= f.input :childrens, input_html: {class: "people-limit"}, selected: 0, collection: 0..amountChildren %>
  <%=f.input_field :baby_bed, as: :boolean, boolean_style: :inline  %>
  <%= f.input :street %>
  <%= f.input :city %>
  <%= f.input :zipcode %>
  <%= f.input :country %>
  <%= f.input :comment %>
  <%= f.input :arrival_date, as: :string, input_html: {class: "datepicker-arrival", id: "arrival-date"}  %>
  <%= f.input :departure_date, as: :string, input_html: {class: "datepicker-departure", readonly: true} %>

  <%= f.submit class: "btn btn-red-own-activities" %>
<% end %>
</div>
